<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:OsvitaApp.Pages.Controls"
             xmlns:vm="clr-namespace:OsvitaApp.PageModels"
             xmlns:textInput="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:effectsView="clr-namespace:Syncfusion.Maui.Toolkit.EffectsView;assembly=Syncfusion.Maui.Toolkit"
             x:Class="OsvitaApp.Pages.RegistrationPage"
             Title="RegistrationPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Flyout"
             BackgroundColor="{x:StaticResource White}"
             x:DataType="vm:RegistrationPageVM">
    <Grid>
        <Ellipse Fill="{x:StaticResource CircleColorBig}"
                 WidthRequest="248"
                 HeightRequest="248"
                 HorizontalOptions="End"
                 VerticalOptions="Start"
                 TranslationX="120"
                 TranslationY="-129"
                 ZIndex="-100" />
        <Ellipse Fill="{x:StaticResource CircleColorBig}"
                 WidthRequest="204"
                 HeightRequest="204"
                 HorizontalOptions="Start"
                 VerticalOptions="End"
                 TranslationX="-28"
                 TranslationY="116"
                 ZIndex="-100" />
        <Ellipse Fill="{x:StaticResource CircleColorSmall}"
                 WidthRequest="90"
                 HeightRequest="90"
                 HorizontalOptions="Start"
                 VerticalOptions="End"
                 TranslationX="-39"
                 TranslationY="-50"
                 ZIndex="-100" />

        <VerticalStackLayout VerticalOptions="Center"
                             HorizontalOptions="Fill"
                             Margin="20"
                             Spacing="25">

            <!--Реєстрація-->
            <Label Text="Реєстрація"
                   Style="{x:StaticResource Title3}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   TextColor="{x:StaticResource Primary}" />

            <!--Продовжити з гугл-->
            <controls:ContinueWithGoogle />

            <!--Роздільник Або-->
            <Grid>
                <Line Fill="{x:StaticResource CircleColorBig}"
                      BackgroundColor="{x:StaticResource CircleColorBig}"
                      HeightRequest="1" />

                <Label Text="або"
                       Style="{x:StaticResource Caption1}"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       TextColor="{x:StaticResource CircleColorBig}"
                       BackgroundColor="White"
                       WidthRequest="70"
                       HorizontalTextAlignment="Center" />
            </Grid>

            <Grid>
                <Label Text="Електронна пошта"
                       Style="{x:StaticResource CredentialsEntryText}" />
                <textInput:SfTextInputLayout Stroke="Transparent"
                                             ContainerType="None"
                                             Padding="0"
                                             Margin="0"
                                             ReserveSpaceForAssistiveLabels="False"
                                             ShowHint="True"
                                             IsHintAlwaysFloated="True">
                    <Entry Placeholder="Введіть електронну пошту"
                           PlaceholderColor="{x:StaticResource TextGray}" />
                </textInput:SfTextInputLayout>
                <Line Style="{x:StaticResource CredentialsEntryLine}" />
            </Grid>

            <Grid>
                <Label Text="Пароль"
                       Style="{x:StaticResource CredentialsEntryText}" />
                <textInput:SfTextInputLayout Stroke="Transparent"
                                             ContainerType="None"
                                             Padding="0"
                                             Margin="0"
                                             ReserveSpaceForAssistiveLabels="False"
                                             ShowHint="True"
                                             IsHintAlwaysFloated="True">
                    <Entry Placeholder="Введіть пароль"
                           PlaceholderColor="{x:StaticResource TextGray}" />
                </textInput:SfTextInputLayout>
                <Line Style="{x:StaticResource CredentialsEntryLine}" />
            </Grid>

            <Grid>
                <Label Text="Ім'я"
                       Style="{x:StaticResource CredentialsEntryText}" />
                <textInput:SfTextInputLayout Stroke="Transparent"
                                             ContainerType="None"
                                             Padding="0"
                                             Margin="0"
                                             ReserveSpaceForAssistiveLabels="False"
                                             ShowHint="True"
                                             IsHintAlwaysFloated="True">
                    <Entry Placeholder="Введіть ім’я"
                           PlaceholderColor="{x:StaticResource TextGray}" />
                </textInput:SfTextInputLayout>
                <Line Style="{x:StaticResource CredentialsEntryLine}" />
            </Grid>

            <Grid>
                <Label Text="Прізвище"
                       Style="{x:StaticResource CredentialsEntryText}" />
                <textInput:SfTextInputLayout Stroke="Transparent"
                                             ContainerType="None"
                                             Padding="0"
                                             Margin="0"
                                             ReserveSpaceForAssistiveLabels="False"
                                             ShowHint="True"
                                             IsHintAlwaysFloated="True">
                    <Entry Placeholder="Введіть прізвище"
                           PlaceholderColor="{x:StaticResource TextGray}" />
                </textInput:SfTextInputLayout>
                <Line Style="{x:StaticResource CredentialsEntryLine}" />
            </Grid>

            <controls:RippleButton Text="Зареєструватись"
                                   Style="{x:StaticResource BigPrimaryButton}" />

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Вже маєте акаунт? "
                              FontSize="16"
                              TextColor="{x:StaticResource TextGray}" />
                        <Span Text="Увійти"
                              FontSize="16"
                              TextColor="{x:StaticResource Primary}" />
                    </FormattedString>
                </Label.FormattedText>

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LogInCommand}" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>

    </Grid>
</ContentPage>