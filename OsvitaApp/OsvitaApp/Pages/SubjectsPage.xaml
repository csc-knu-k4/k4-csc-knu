<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:OsvitaApp.Pages.Controls"
             xmlns:vm="clr-namespace:OsvitaApp.PageModels"
             xmlns:om="clr-namespace:OsvitaApp.Models.ObservableModels"
             xmlns:textInput="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:effectsView="clr-namespace:Syncfusion.Maui.Toolkit.EffectsView;assembly=Syncfusion.Maui.Toolkit"
             x:Class="OsvitaApp.Pages.SubjectsPage"
             Title="SubjectsPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Flyout"
             BackgroundColor="{x:StaticResource LightBackground}"
             x:DataType="vm:SubjectsPageVM"
             ControlTemplate="{StaticResource PageBaseTemplate}">

    <ContentPage.Behaviors>
        <mct:EventToCommandBehavior EventName="NavigatedTo"
                                    Command="{Binding NavigatedToCommand}" />

    </ContentPage.Behaviors>
    <FlexLayout Wrap="Wrap"
                JustifyContent="Center"
                AlignItems="Center"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                BindableLayout.ItemsSource="{Binding Subjects}">
        <BindableLayout.ItemTemplate>
            <DataTemplate x:DataType="om:SubjectObservableModel">
                <controls:SubjectCard>
                    <controls:SubjectCard.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                              Command="{Binding x:DataType='vm:SubjectsPageVM', Source={RelativeSource AncestorType={x:Type vm:SubjectsPageVM}}, Path=SubjectTappedCommand}"
                                              CommandParameter="{Binding .}" />
                    </controls:SubjectCard.GestureRecognizers>
                </controls:SubjectCard>
            </DataTemplate>
        </BindableLayout.ItemTemplate>

    </FlexLayout>
</ContentPage>