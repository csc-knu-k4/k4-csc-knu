<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:OsvitaApp.Pages.Controls"
             xmlns:vm="clr-namespace:OsvitaApp.PageModels"
             xmlns:om="clr-namespace:OsvitaApp.Models.ObservableModels"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="OsvitaApp.Pages.Controls.TextContentBlockView"
             x:DataType="om:ContentBlockObservableModel">
    <VerticalStackLayout>
        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14"/>
        <Label Text="{Binding Value}" FontSize="14"/>
    </VerticalStackLayout>
    
</ContentView>