<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:om="clr-namespace:OsvitaApp.Models.ObservableModels"
             x:Class="OsvitaApp.Pages.Controls.AnswerDescriptionView"
             x:DataType="om:AnswerObservableModel">
    <HorizontalStackLayout Spacing="10">
        <Label Text="{Binding AnswerLetter}" TextColor="{StaticResource Primary}" FontAttributes="Bold"/>
        <Label Text="{Binding Value}" />
    </HorizontalStackLayout>

</ContentView>