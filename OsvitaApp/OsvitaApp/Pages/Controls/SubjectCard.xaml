<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="OsvitaApp.Pages.Controls.SubjectCard"
        xmlns:om="clr-namespace:OsvitaApp.Models.ObservableModels"
        Style="{x:StaticResource BackgroundBorderStyle}"
        Stroke="#5C6CFF"
        StrokeThickness="1"
        Padding="0"
        HeightRequest="200"
        WidthRequest="300"
        Margin="0,10,0,0"
        x:DataType="om:SubjectObservableModel">

    <Border.Shadow>
        <Shadow Brush="#5C6CFF"
                Offset="0,0"
                Radius="5"
                Opacity="0.5" />
    </Border.Shadow>

    <Border.Triggers>

        <DataTrigger TargetType="Border"
                     Binding="{Binding IsEnabled}"
                     Value="True">
            <Setter Property="BackgroundColor"
                    Value="{x:StaticResource GrayD9}" />
            <Setter Property="Stroke"
                    Value="Transparent" />
            <Setter Property="Shadow"
                    Value="{x:Null}" />

        </DataTrigger>

    </Border.Triggers>

    <Grid>

        <Border HeightRequest="70"
                WidthRequest="100"
                Padding="0"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                BackgroundColor="{x:StaticResource Primary}"
                Stroke="#DA5D15"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10 0 0 10">
            <Border.Triggers>

                <DataTrigger TargetType="Border"
                             Binding="{Binding IsEnabled}"
                             Value="True">
                    <Setter Property="IsVisible"
                            Value="False" />

                </DataTrigger>

            </Border.Triggers>

            <Border.Background>

                <RadialGradientBrush>
                    <GradientStop Color="{x:StaticResource Primary}"
                                  Offset="0.2" />
                    <GradientStop Color="#DA5D15"
                                  Offset="1.0" />
                </RadialGradientBrush>
            </Border.Background>

            <Image Source="{x:StaticResource MathIcon}"
                   Aspect="Center" />

        </Border>

        <Label Text="{Binding Title}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Style="{x:StaticResource Title2}"
               FontAttributes="Bold" />

    </Grid>
</Border>