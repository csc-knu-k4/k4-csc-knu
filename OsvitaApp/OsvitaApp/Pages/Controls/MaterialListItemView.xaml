<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:om="clr-namespace:OsvitaApp.Models.ObservableModels"
             x:Class="OsvitaApp.Pages.Controls.MaterialListItemView"
             x:DataType="om:MaterialObservableModel">

    <HorizontalStackLayout>

        <Image Source="{x:StaticResource MaterialIcon}" HeightRequest="19" WidthRequest="26"/>
        <Label Text="{Binding Title}" FontSize="14" />
    </HorizontalStackLayout>
</ContentView>