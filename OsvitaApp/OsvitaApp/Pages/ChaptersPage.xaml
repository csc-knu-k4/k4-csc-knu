<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:OsvitaApp.Pages.Controls"
             xmlns:vm="clr-namespace:OsvitaApp.PageModels"
             xmlns:om="clr-namespace:OsvitaApp.Models.ObservableModels"
             xmlns:textInput="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:effectsView="clr-namespace:Syncfusion.Maui.Toolkit.EffectsView;assembly=Syncfusion.Maui.Toolkit"
             x:Class="OsvitaApp.Pages.ChaptersPage"
             Title="ChaptersPage"
             x:DataType="vm:ChaptersPageVM"
             BackgroundColor="{x:StaticResource LightBackground}"
             Shell.NavBarIsVisible="False">
    <ContentPage.Behaviors>
        <mct:EventToCommandBehavior EventName="NavigatedTo"
                                    Command="{Binding NavigatedToCommand}" />

    </ContentPage.Behaviors>

    <ContentPage.Resources>
        <ResourceDictionary>
            <mct:IsNullConverter x:Key="IsNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <Grid Padding="20,60,20,20"
              RowSpacing="20">
            <Grid.RowDefinitions>

                <RowDefinition Height="64" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <controls:TopPanel Grid.Row="0" />

            <Border Grid.Row="1"
                    Style="{x:StaticResource BackgroundBorderStyle}"
                    Padding="10">

                <CollectionView ItemsSource="{Binding Chapters}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"
                                           ItemSpacing="7.5" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="om:ChapterObservableModel">
                            <Border Stroke="#f4f4f4"
                                    StrokeThickness="1"
                                    BackgroundColor="White"
                                    Padding="10"
                                    StrokeShape="RoundRectangle 15">

                                <VerticalStackLayout>
                                    <Grid>
                                        <Label Text="{Binding Title}"
                                               FontSize="20"
                                               VerticalOptions="Center" />
                                        <ImageButton Source="{x:StaticResource ArrowDown}"
                                                     HorizontalOptions="End"
                                                     Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ChaptersPageVM}}, Path=ChapterExpandedCommand}"
                                                     CommandParameter="{Binding .}">
                                            <ImageButton.Triggers>
                                                <DataTrigger TargetType="ImageButton"
                                                             Binding="{Binding IsExpanded}"
                                                             Value="True">
                                                    <Setter Property="Source"
                                                            Value="{x:StaticResource ArrowUp}" />
                                                </DataTrigger>
                                            </ImageButton.Triggers>

                                        </ImageButton>
                                    </Grid>

                                    <VerticalStackLayout IsVisible="{Binding IsExpanded}">
                                        <Label Text="Завантаження тем..."
                                               IsVisible="{Binding Topics, Converter={StaticResource IsNullConverter}}" />
                                        <Line Fill="#000000"
                                              Opacity="0.15"
                                              BackgroundColor="#000000"
                                              HeightRequest="1" />
                                        <CollectionView ItemsSource="{Binding Topics}"
                                                        Margin = "0, 20, 0, 0">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout Orientation="Vertical"
                                                                   ItemSpacing="7.5" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="om:TopicObservableModel">
                                                    <controls:TopicView>

                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ChaptersPageVM}}, Path=TopicClickedCommand}"
                                                                                  CommandParameter="{Binding .}" />

                                                        </Grid.GestureRecognizers>
                                                    
                                                    </controls:TopicView>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Border>

        </Grid>

    </ScrollView>
</ContentPage>